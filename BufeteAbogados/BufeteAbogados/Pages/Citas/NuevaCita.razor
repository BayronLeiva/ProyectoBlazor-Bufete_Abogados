@page "/Citas/Nuevo"

<h3>Lista de Clientes</h3>

@if (clientesLista == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>Telefono</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in clientesLista)
            {
                <tr>
                    <td>@user.Codigo</td>
                    <td>@user.Nombre</td>
                    <td>@user.Apellido</td>
                    <td>@user.Edad</td>
                    <td>@user.Telefono</td>
                </tr>
            }
        </tbody>
    </table>
}

<h3>Lista de Abogados</h3>

@if (abogadosLista == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Codigo Abogado</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Esta Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var abog in abogadosLista)
            {
                <tr>
                    <td>@abog.CodigoAbogado</td>
                    <td>@abog.Nombre</td>
                    <td>@abog.Apellido</td>
                    <td>@abog.Telefono</td>
                    <td>@abog.Correo</td>
                    <td>
                        @if (@abog.EstaActivo)
                        {
                            <span class="oi oi-circle-check" style="color:green;"></span>
                        }
                        else
                        {
                            <span class="oi oi-circle-x" style="color:red;"></span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h3>Nueva Cita</h3>
<br />
<EditForm Model="@cit">
    <DataAnnotationsValidator />
    <div class="from-group row">
        <label for="CodigoCliente" class="col-sm-2 col-from-label">
            Código Cliente
        </label>
        <div class="col-sm-10">
            <InputText id="CodigoCliente" class="form-control" placeholder="Codigo Cliente" @bind-Value="cit.CodigoCliente" />
            <ValidationMessage For="@(() => cit.CodigoCliente)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="CodigoAbogado" class="col-sm-2 col-from-label">
            Código Abogado
        </label>
        <div class="col-sm-10">
            <InputText id="CodigoAbogado" class="form-control" placeholder="Codigo Abogado" @bind-Value="cit.CodigoAbogado" />
            <ValidationMessage For="@(() => cit.CodigoAbogado)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="CodigoCita" class="col-sm-2 col-from-label">
            Código Cita
        </label>
        <div class="col-sm-10">
            <InputText id="CodigoCita" class="form-control" placeholder="Codigo Cita" @bind-Value="cit.CodigoCita" />
            <ValidationMessage For="@(() => cit.CodigoCita)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="Fecha" class="col-sm-2 col-from-label">
            Fecha
        </label>
        <div class="col-sm-10">
            <InputDate id="Fecha" class="form-control" placeholder="Fecha" @bind-Value="cit.Fecha" />
            <ValidationMessage For="@(() => cit.Fecha)" />
        </div>
    </div>



    <div class="from-group row">
        <label for="Descripcion" class="col-sm-2 col-from-label">
            Descripcion
        </label>
        <div class="col-sm-10">
            <InputText id="Descripcion" class="form-control" placeholder="Descripcion" @bind-Value="cit.Descripcion" />
            <ValidationMessage For="@(() => cit.Descripcion)" />
        </div>
    </div>


    <div class="form-group row">
        <p>
            <input type="submit" class="btn-toolbar btn-primary" value="Guardar" @onclick="Guardar" />
            <input type="submit" class="btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />
        </p>
    </div>
</EditForm>
